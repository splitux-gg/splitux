# Racing Profile - Controller for racing games
# Triggers = throttle/brake, Left stick = steering

[config]
deadzone_mode = axial
deadzone = 3000
deadzone_scale = 7

[controls]
# Triggers as throttle/brake
r2 = w
l2 = s

# Left stick steering
left_analog_left = a
left_analog_right = d

# Alternative: D-pad steering
left = a
right = d
up = w
down = s

# Face buttons
a = space
b = r
x = e
y = q

# Shoulder buttons for gear/nitro
l1 = shift
r1 = ctrl

# Special buttons
back = esc
start = enter

# L3/R3
l3 = c
r3 = v
