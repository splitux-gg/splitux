# Mouse Only Profile - Controller to mouse only
# Right stick = mouse movement, triggers = clicks
# Minimal keyboard mapping for basic navigation

[config]
deadzone_mode = axial
deadzone = 2000
deadzone_scale = 7
mouse_scale = 400
mouse_delay = 16

[controls]
# Right stick mouse movement
right_analog = mouse_movement

# Mouse clicks
l2 = mouse_right
r2 = mouse_left

# Face buttons for basic navigation
a = enter
b = esc
x = tab
y = backspace

# Shoulder buttons for scrolling
l1 = mouse_wheel_up
r1 = mouse_wheel_down

# D-pad as arrow keys
up = up
down = down
left = left
right = right

# Special buttons
back = esc
start = enter
